<div class="jumbotron">
  <h1>Hello, world!</h1>
  <p>Have something that you just must know? Well...</p>
  <p>
    <button type="button" class="btn btn-primary btn-lg"  data-toggle="modal" data-target="#AskAQuestionForm">Ask a Question</button>
  </p>
</div>

<div style="max-width: 60em; margin: auto;">
<ul class="media-list">
  <% @questions.each do |q| %>
  <li class="media">
      <a href="#">
    <div class="media">
    <div class="media-left">
      <a href="#">
        <img class="media-object" src="<%= q.gravatar %>" alt="...">
      </a>
    </div>
    <div class="media-body">
      <div class="well"><%= q.body %></div>
        <div class="text-right">
          <div><a href="<%= question_path(q) %>" class="btn btn-success btn-xs btn-right">View Answers</a></div>
          <div class="label label-default">Asked <%= time_ago_in_words q.created_at %> ago</div>
        </div>
    </div>
    </div>
  </li>
  <% end %>
  <% if @questions.empty? %>
    <div class="alert alert-info" role="alert">There are currently no questions or answers. Be the first to ask!</div>
  <% end %>
</ul>
</div>