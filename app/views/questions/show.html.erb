<div class="panel panel-default">
  <div class="panel-body">
    
  <div class="media">
      <div class="lead well">
        <div class="media-left media-top">
          <a href="<%= @question.id %>">
            <img class="media-object" src="<%= @question.gravatar %>" alt="Gravatar">
          </a>
        </div>
        <div class="media-body">
        <div class="panel panel-body"><%= @question.body %></div>
        </div>
      </div>
  </div>
  
        <span class="glyphicon glyphicon-random" aria-hidden="true"></span>
        <div class="label label-default">Asked <%= time_ago_in_words @question.created_at %> ago</div>
    <button type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#AnswerAQuestionForm">Submit new answer</button>
    <%= render 'home/new_answer_form' %>

  </div>
</div>

<ul class="media-list">
  <% @answers.each do |a| %>
  <li class="media">
    <div class="media-left">
      <a href="#">
        <img class="media-object" src="<%= a.gravatar %>" alt="Placeholder-image">
      </a>
    </div>
    <div class="media-body">
      <div class="well"><%= a.body %></div>
        <div class="label label-default">Posted <%= time_ago_in_words a.created_at %> ago</div>
    </div>
  </li>
  <% end %>
  <% if @answers.empty? %>
    <div class="alert alert-info" role="alert">There are currently no answers. Be the first to help!</div>
  <% end %>
</ul>

</div>
